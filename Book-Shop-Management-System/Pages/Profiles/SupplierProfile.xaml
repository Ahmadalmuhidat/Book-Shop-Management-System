<Page x:Class="Book_Shop_Management_System.Pages.Profiles.SupplierProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Book_Shop_Management_System.Pages.Profiles"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SupplierProfile">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".05*"></RowDefinition>
            <RowDefinition Height=".20*"></RowDefinition>
            <RowDefinition Height=".05*"></RowDefinition>
            <RowDefinition Height=".70*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
            <StackPanel>
                <TextBlock Text="Supplier Deatails" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Orientation="Vertical">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width=".20*"></ColumnDefinition>
                    <ColumnDefinition Width=".30*"></ColumnDefinition>
                    <ColumnDefinition Width=".50*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Border BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
                        <Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Source="/Pages/Profiles/person.jpg"/>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical">
                    <TextBlock x:Name="SupplierID" Margin="5" TextWrapping="Wrap" FontSize="13"/>
                    <TextBlock Margin="5" TextWrapping="Wrap" FontSize="13">
                       <Bold>Address Line 1:</Bold> text
                    </TextBlock>
                    <TextBlock Margin="5" TextWrapping="Wrap" FontSize="13">
                       <Bold>Address Line 2:</Bold> text
                    </TextBlock>
                    <TextBlock Margin="5" TextWrapping="Wrap" FontSize="13">
                       <Bold>Address City:</Bold> text
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical">
                    <TextBlock Margin="5" TextWrapping="Wrap" FontSize="13">
                       <Bold>Phone Number:</Bold> text
                    </TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="Gray" Background="LightGray" BorderThickness="2" DockPanel.Dock="Top">
            <StackPanel>
                <TextBlock Text="Previous Purchases" FontSize="20" FontWeight="Bold" TextAlignment="Center"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="3">
            <StackPanel>
                <DataGrid x:Name="Purchases">
                    <DataGrid.Columns>
                        <DataGridTextColumn
               Header="Purchase ID"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseID}"/>
                        <DataGridTextColumn
               Header="Book ID"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseBookID}"/>
                        <DataGridTextColumn
               Header="Supplier ID"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseSupplierID}"/>
                        <DataGridTextColumn
               Header="Quantity"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseQuantity}"/>
                        <DataGridTextColumn
               Header="Purchase Date"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseDate}"/>
                        <DataGridTextColumn
               Header="ETA"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseETA}"/>
                        <DataGridTextColumn
               Header="Received"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseReceived}"/>
                        <DataGridTextColumn
               Header="Invoice"
               MinWidth="150"
               Width="*"
               Binding="{Binding PurchaseInvoice}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
